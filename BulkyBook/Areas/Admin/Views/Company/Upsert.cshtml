@model BulkyBook.Models.ViewModels.Company

@{
    string screenname = (@Model == null) ? "Create" : "Edit";

}

<form method="post" asp-area="Admin" asp-action="UpSert" asp-controller="Company">

    <div class="row text-start">
        <h2 class="h2" style="color:darkslategray">  @screenname   Company   </h2>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>

    <div class="row">
        <div class="col-8">
            <label asp-for="Name" class="form-label"></label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <label asp-for="StreetAddress" class="form-label"></label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="StreetAddress" class="form-control" />
            <span asp-validation-for="StreetAddress" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-8">
            <label asp-for="City" class="form-label"></label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-8">
            <label asp-for="State" class="form-label"></label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="State" class="form-control" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-8">
            <label asp-for="PostalCode" class="form-label"></label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-8">
            <label asp-for="PhoneNumber" class="form-label"></label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-8">
            <input type="checkbox" asp-for="IsAuthorizedCompany" class="form-check-input" />
            <label asp-for="IsAuthorizedCompany" class="form-label"></label>
            <span asp-validation-for="IsAuthorizedCompany" class="text-danger"></span>
        </div>
        <div class="col-8">
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-6">
            @{ var valueType = ViewBag.Type == "Update" ? "Update" : "Create"; }
            <input type="submit" class="btn btn-sm btn-success" value="@valueType" />
            <a class="btn btn-sm btn-danger" asp-action="Index" asp-controller="Company">Cancel</a>
        </div>
    </div>
</form>

@section Scripts{

    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />

}